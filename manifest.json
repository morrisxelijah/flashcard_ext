{
    "name": "Flash Card Clipper",
    "description": "highlight text → create flashcards → review in side panel with spaced repetition; export tsv for anki/quizlet",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons": {
        "128": "assets/staticshock_icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Open Study Panel",
        "default_icon": {
            "128": "assets/staticshock_icon.png"
        }
    },
    "options_page": "./options.html",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting",
        "clipboardWrite",
        "alarms",
        "sidePanel",
        "contextMenus"
    ],
    "side_panel": {
        "default_path": "./popup.html"
    },
    "commands": {
        "clip_selection": {
            "suggested_key": {
                "default": "Alt+Shift+K",
                "mac": "Alt+Shift+K"
            },
            "description": "Populate Quick Add (flashcard) from selection"
        },
        "clip_selection_notes": {
            "suggested_key": {
                "default": "Alt+Shift+N",
                "mac": "Alt+Shift+N"
            },
            "description": "Populate Notes from selection + page metadata"
        }
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["foreground.js"],
            "run_at": "document_idle"
        }
    ]
}